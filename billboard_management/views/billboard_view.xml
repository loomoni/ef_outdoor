<odoo>
    <record id="view_billboard_tree" model="ir.ui.view">
        <field name="name">billboard.tree</field>
        <field name="model">billboard.management</field>
        <field name="arch" type="xml">
            <tree string="Billboards">
                <field name="name"/>
                <field name="location"/>
                <field name="region"/>
                <field name="size"/>
                <field name="rental_price"/>
                <field name="availability"/>
            </tree>
        </field>
    </record>

    <record id="billboard_list_kanban_view" model="ir.ui.view">
        <field name="name">billboard.list.kanban.view</field>
        <field name="model">billboard.management</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="image_small"/>
                <field name="name"/>
                <field name="location"/>
                <field name="region"/>
                <field name="size"/>
                <field name="rental_price"/>
                <field name="availability"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('billboard.management', 'image_small', record.id.raw_value)"
                                     alt="Billboard"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div name="tags"/>
                                <ul>
                                    <li>Region:
                                        <field name="region"/>
                                    </li>
                                </ul>
                                <div name="tags"/>
                                <strong>
                                    <field name="availability"/>
                                </strong>
                                <div name="tags"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_billboard_form" model="ir.ui.view">
        <field name="name">billboard.form</field>
        <field name="model">billboard.management</field>
        <field name="arch" type="xml">
            <form string="Billboard">
                <sheet>
                      <group>
                            <group>
                                <field name="image_small" widget="image"/>
                            </group>

                        </group>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="media_type"/>
                        </group>
                        <group>
                            <field name="size"/>
                            <field name="rental_price"/>
                        </group>

                    </group>
                    <group>
                        <group>
                            <field name="location"/>
                            <field name="region"/>

                        </group>
                        <group>
                            <field name="availability"/>
                        </group>

                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
</odoo>
